<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Database javascript</title>
</head>
<body>
    
    <div class="container">
        <h1><%= title %></h1>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">name</th>
                <th scope="col">kelas</th>
              </tr>
            </thead>
            <tbody>
            <% for(let school of users) { %>
                <tr> 
                    <th scope="row"><%= school.id %></th>
                    <th scope="row"><%= school.name %></th>
                    <th scope="row"><%= school.kelas %></th>
                </tr>
            <% } %>
            </tbody>
          </table>
          <form  action="/tambah" method="post">
            <h2>Tambah Murid</h2>
            <div class="row mb-3">
              <label for="" class="col-sm-2 col-form-label">Nama</label>
              <input type="text" name="name" class="form-control" >
            </div>
            <div class="row-mb-3">
              <label for="kelas" class="col-sm-2 col-form-label">Kelas</label>
              <input type="text" name="kelas" class="form-control" >
            </div>
            <input type="submit" class="btn btn-outline-primary mb-5 mt-5" value="tambah"  />   
          </form>
          <a class="float-end mb-4" href="/chat">Forum Diskusi</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>